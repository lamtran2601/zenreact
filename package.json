{
  "name": "@zenreact/workspace",
  "version": "0.1.0",
  "type": "module",
  "description": "ZenReact - High-performance React state management and rendering optimization",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "build:watch": "pnpm -r run build --watch",
    "test": "pnpm -r run test",
    "test:coverage": "pnpm -r run test:coverage",
    "test:watch": "pnpm -r run test:watch",
    "lint": "eslint 'packages/*/src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'packages/*/src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'packages/*/src/**/*.{ts,tsx}'",
    "clean": "pnpm -r run clean",
    "typecheck": "pnpm -r run typecheck",
    "prepare": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "page:dev": "vitepress dev page",
    "page:build": "vitepress build page",
    "page:preview": "vitepress preview page"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.21.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.58",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "daisyui": "^5.0.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "postcss": "^8.5.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "tailwindcss": "^4.0.12",
    "ts-jest": "^29.2.6",
    "typescript": "^5.3.3",
    "vitepress": "^1.0.0-rc.40",
    "vue": "^3.4.15"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lamtran2601/zenreact.git"
  },
  "bugs": {
    "url": "https://github.com/lamtran2601/zenreact/issues"
  },
  "homepage": "https://zenreact.dev",
  "author": {
    "name": "Zen Development Team",
    "email": "team@zenreact.dev"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@tanstack/react-query": "^5.67.2",
    "react-router-dom": "^7.3.0",
    "zustand": "^5.0.3"
  }
}